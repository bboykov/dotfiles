[user]
	name = Boyko Boykov
	email = boyko@receipt-bank.com
[core]
	editor = vim
	excludesfile = $HOME/.gitignore_global
[alias]
        vcommit = commit --verbose
	unstage = reset HEAD --
	last = log -1 HEAD
        # Log aliases
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lg = log --oneline --decorate --all --graph
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        graph = log --graph --abbrev-commit --decorate --date=relative --full-history --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold blue)%an%C(reset)%C(bold yellow)%d%C(reset)'
        grapha = log --graph --abbrev-commit --decorate --date=relative --all --full-history --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold blue)%an%C(reset)%C(bold yellow)%d%C(reset)'
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
